<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="socket.io/socket.io.js"> </script>
  <link rel="stylesheet" href="/public/css/style.css" />
  <title>Register</title>
</head>

<body>
  <div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Tabs Titles -->
      <h2 class="active">Register</h2>
      <a href="login">Login </a>

      <!-- Icon -->

      <!-- Register  Form -->

      <form action="register" method="POST">
        <h2>
          <%=msg%>
        </h2>
        <p id="nameMsg" class="nameMsg"></p>
        <input type="text" onkeyup="checkValidateName()" id="name" class="fadeIn second" name="name" placeholder="name"
          required />
        <p id="emailMsg"> </p>
        <input type="email" onkeyup="checkValidateEmail()" id="email" class="fadeIn third" name="email"
          placeholder="email" required />
        <p id="passwordMsg"></p>
        <input type="password" onkeyup="checkPass()" id="password" class="fadeIn third" name="password"
          placeholder="password" required />
        <p id="rePasswordMsg"></p>
        <input type="password" onkeyup="checkRepass()" id="rePassword" class="fadeIn third" name="rePassword"
        placeholder="rePassword" required />
        
        <div id ="codeinput" style="display:none">
          <input type="number"fadeIn third" placeholder="4-diget code" name="code">
        </div>
        <p id ="Timer"></p>
        <button id ="verifyButton" type="button" onclick="sendCode()">Send Verify code</button>
        <p id="VerifyMsg"></p>
                <input type="submit" class="fadeIn fourth" value="Sign Up" />
      </form>
      <!-- Remind Password -->
    </div>
  </div>
  <script src="/public/js/register.js">

  </script>
</body>

</html>